<FileChooser>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint: 1, .2
            Label:
                font_size: 20
                text: 'pasirinkite norima nuotrauka'
        BoxLayout:
            FileChooserIconView:
                id: chosen_object
                rootpath: './'
        BoxLayout:
            size_hint: 1, .2
            Button:
                font_size: 20
                text: "UÅ¾krauti"
                on_release: root.load_picture(chosen_object.selection)


<Enlarge>:
    picture_to_display: picture_to_display
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            Image:
                id: picture_to_display
                allow_stretch: True
        BoxLayout:
            size_hint: 1, .15
            TextInput:
                size_hint: 5, 1
                id: user_input
                text: ""
                hint_text: "iveskite kiek kartu norima padidinti"
                input_filter: 'int'
            Button:
                size_hint: 5, 1
                text: "Didinti"
                on_release: root.enlarge(user_input.text)
        BoxLayout:
            size_hint: 1, .15
            Button:
                text: "Rinktis kita nuotrauka"
                on_release: root.dismiss()