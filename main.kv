<FileChooser>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            size_hint: 1, .2
            font_size: 20
            text: 'pasirinkite norima nuotrauka'
        FileChooserIconView:
            id: chosen_object
            rootpath: './'
        Button:
            size_hint: 1, .2
            font_size: 20
            text: "Pasirinkti"
            on_release: root.load_picture(chosen_object.selection)


<Enlarge>:
    picture_to_display: picture_to_display
    BoxLayout:
        orientation: 'vertical'
        Image:
            id: picture_to_display
            allow_stretch: True
        BoxLayout:
            size_hint: 1, .15
            TextInput:
                size_hint: 5, 1
                id: user_input
                text: ""
                hint_text: "iveskite kiek kartu norima padidinti"
                input_filter: 'int'
            Button:
                size_hint: 5, 1
                text: "Didinti"
                on_release: root.enlarge(user_input.text)
        Button:
            size_hint: 1, .15
            text: "Rinktis kita nuotrauka"
            on_release: root.dismiss()